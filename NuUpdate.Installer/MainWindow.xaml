<Window x:Class="NuUpdate.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="lblProgress">Press Start</TextBlock>
        <ProgressBar x:Name="progressBar" Grid.Row="1"/>
        <Button x:Name="btnStart" Click="BtnStartClick1" Content="Start" Grid.Row="2"/>
    </Grid>
</Window>
